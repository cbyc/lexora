<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lexora</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,300;9..144,400;9..144,500&family=Newsreader:ital,opsz,wght@0,6..72,300;0,6..72,400;1,6..72,300&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/htmx.org@2.0.4"></script>
  <link rel="stylesheet" href="styles/app.css">
</head>
<body>

  <!-- Sidebar -->
  <nav id="sidebar">
    <div class="sidebar-brand">
      <span class="brand-wordmark">Lexora</span>
    </div>
    <ul id="nav-list" class="sidebar-nav"></ul>
    <div class="sidebar-footer">
      <span class="sidebar-footer-text">&copy; Mehdi Khajeh</span>
    </div>
  </nav>

  <!-- Main content -->
  <div id="main-wrapper">
    <header id="main-header">
      <h1 id="module-title"></h1>
    </header>
    <main id="content"></main>
  </div>

  <script>
    const MODULES = [
      {
        id: "rss",
        label: "Feed",
        subtitle: "RSS Reader",
        apiBase: "${FEED_API_BASE}",
        module: "modules/feed.js"
      },
      {
        id: "kb-chat",
        label: "Mind",
        subtitle: "Knowledge Base",
        apiBase: "${MIND_API_BASE}",
        module: "modules/mind.js"
      }
    ];

    const navList = document.getElementById("nav-list");
    const content = document.getElementById("content");
    const moduleTitle = document.getElementById("module-title");
    let activeModuleId = null;

    // Build nav items
    MODULES.forEach((mod) => {
      const li = document.createElement("li");
      li.innerHTML = `
        <button data-module="${mod.id}" class="nav-item">
          <span class="nav-item-label">${mod.label}</span>
          <span class="nav-item-sub">${mod.subtitle}</span>
        </button>
      `;
      li.querySelector("button").addEventListener("click", () => loadModule(mod));
      navList.appendChild(li);
    });

    async function loadModule(mod) {
      // Update active state
      document.querySelectorAll(".nav-item").forEach((btn) => {
        btn.classList.toggle("active", btn.dataset.module === mod.id);
      });

      moduleTitle.textContent = mod.label;
      activeModuleId = mod.id;
      content.innerHTML = '<p class="loading-text">Loading\u2026</p>';

      try {
        const module = await import(`./${mod.module}`);
        content.innerHTML = "";
        // Trigger fade-in animation
        content.classList.remove("content-fade-in");
        void content.offsetWidth;
        content.classList.add("content-fade-in");
        module.init(content, mod.apiBase);
      } catch (err) {
        content.innerHTML = `<p class="error-text">Failed to load module: ${err.message}</p>`;
      }
    }

    // Auto-load first module
    if (MODULES.length > 0) {
      loadModule(MODULES[0]);
    }
  </script>
</body>
</html>
